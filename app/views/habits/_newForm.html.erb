<body>
    <%= form_with(model: habit, local: true) do |form| %>
    <div class="showBox container col-sm-6">

        <h4 class="new-title">New Habit</h4>

        <% if habit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(habit.errors.count, "error") %> prohibited this habit from being saved:</h2>

          <ul>
            <% habit.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-group" style="padding-top: 10px">
          <div class="field" style="text-align: center">
            <%= form.label :title, style:"font-family: Arial; font-size: 20px" %><br />
            <%= form.text_field :title, class: 'form-control'%>
          </div>
        </div>

        <div class="second-row row">

            <div class="form-group" style="padding-top: 30px">
              <div class="field" style="text-align: center">
                <%= form.label :duration, style:"font-family: Arial; font-size: 20px" %><br />
                <%= form.number_field :duration, class: 'form-control'%>
              </div>
            </div>

            <div class="form-group" style="padding-top: 30px">
              <div class="field" style="text-align: center">
                <%= form.label :durationLeft, 'Duration Left', style:"font-family: Arial; font-size: 20px" %><br />
                <%= form.number_field :durationLeft, class: 'form-control'%>
              </div>
            </div>

        </div>

        <div class="third-row row">

            <div class="form-group" style="padding-top: 30px">
              <div class="field" style="text-align: center">
                <%= form.label :category_id, 'Category', style:"font-family: Arial; font-size: 20px" %><br />
                <%= form.collection_select :category_id, @categories, :id, :name %>
              </div>
            </div>

        </div>

        <div class="actions">
            <%= link_to 'Back', @habit, class: 'edit-back-btn btn btn-light' %>
            <%= form.submit 'Submit', :class => 'update-btn btn btn-primary' %>
        </div>
        <% end %>
        </div>
</body>