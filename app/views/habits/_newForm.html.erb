<body>
    <%= form_with(model: habit, local: true) do |form| %>
    <div class="showBox container col-sm-6">
        <h4 class="title"><%= @habit.title %></h4>
        <% if habit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(habit.errors.count, "error") %> prohibited this habit from being saved:</h2>

          <ul>
            <% habit.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
        </div>

        <div class="field">
        <%= form.label :duration %>
        <%= form.text_area :duration %>
        </div>

        <div class="field">
        <%= form.label :durationLeft %>
        <%= form.text_area :durationLeft %>
        </div>

        <div class="field">
        <%= form.collection_select :category_id, @categories, :id, :name %>
        </div>

        <div class="actions">
        <%= form.submit %>
        </div>
        <% end %>
        </div>
</body>