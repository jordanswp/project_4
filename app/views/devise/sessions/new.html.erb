<body class="backgroundContainer">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


      <div class="signInBox container col-sm-4" style="background: white; box-shadow: 0 0 50px grey; position: relative; top: 70px; margin-top: 50px; padding: 0 20px; border-radius: 5px">
        <div class="col">

              <div class="form-group" style="padding-top: 30px">
                  <div class="field" style="text-align: center">
                    <%= f.label :username, style:"font-family: Arial; font-size: 20px" %><br />
                    <%= f.text_field :login, autofocus: true, class: 'form-control',  placeholder: 'Username'%>
                  </div>
              </div>

              <div class="form-group" style="padding-top: 5px">
                  <div class="field" style="text-align: center">
                    <%= f.label :password, style:"font-family: Arial; font-size: 20px" %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control',  placeholder: 'Password' %>
                  </div>

                <% if devise_mapping.rememberable? %>
                    <div class="field", style="padding-top: 10px">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
              <% end %>

              </div>




              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-secondary', style:"padding-right:25px; padding-left:25px" %>
              </div>

            <% end %>

            <br />

    <%= render "devise/shared/links" %>
        </div>

            <p class="alert"><%= alert %></p>
      </div>



